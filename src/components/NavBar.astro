---
const navItems = [
  { href: '#', text: 'Inicio' },
  { href: '#project', text: 'Proyectos' },
  { href: '#skills', text: 'Skills' },
  { href: '#sobre-mi', text: 'Sobre mí' },
  { href: '#contacto', text: 'Contacto' },
];
---

<nav class= text-white">
  <div class="container mx-auto flex">
      
      <!-- Menú para pantallas grandes -->
      <ul class="hidden lg:flex space-x-4">
        {navItems.map((item) => (
          <li>
            <a href={item.href} class="hover:text-gray-300">{item.text}</a>
          </li>
        ))}
      </ul>
      
      <!-- Botón de menú hamburguesa para pantallas pequeñas -->
      <button id="menu-toggle" class="lg:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    
    <!-- Menú móvil -->
    <div id="mobile-menu" class="hidden lg:hidden absolute top-16 left-0  w-full bg-red-500 z-50">
      <ul class="py-2">
        {navItems.map((item) => (
          <li class="lista">
            <a href={item.href} class="block px-4 py-2 hover:bg-gray-700">{item.text}</a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuToggle?.querySelector('svg');

  const lis = document.querySelectorAll('.lista')

  lis.forEach((e) =>{
    e.addEventListener('click', () => {
      menuToggle?.click();
    })
  })

  if (menuToggle && mobileMenu && menuIcon) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      
      
      // Cambiar el ícono entre hamburguesa y X
      if (mobileMenu.classList.contains('hidden')) {
        menuIcon.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        `;
      } else {
        menuIcon.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        `;
      }
    });
  }
</script>

